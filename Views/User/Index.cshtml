@model Trades.Models.UsersView
@{
        foreach(var error in ViewBag.Errors)
            {
                if(@error.Errors.Count > 0)
                {
                    <p>@error.Errors[0].ErrorMessage</p>
                }
            }
 }

 @foreach (var e in ViewBag.errors)
 {
        <p>@e</p>
 }


  <h1>Login</h1>
<form asp-controller="User" asp-action="Login" method="post">
    <label asp-for="Username"></label>
    <input asp-for="Username"/><br>
    <label asp-for="Password"></label>
    <input asp-for="Password"  type="password"/><br>
    <button type="submit">Log in</button>
</form> 


<h1>Registration</h1>
<form asp-controller="User" asp-action="Register" method="post">
    <label asp-for="FirstName"></label>
    <input asp-for="FirstName"/><br>
    <label asp-for="LastName"></label>
    <input asp-for="LastName"/><br>
    <label asp-for="Username"></label>
    <input asp-for="Username"/><br>
    <label asp-for="Password"></label>
    <input asp-for="Password" type="password"/><br>
    <label asp-for="ConfirmPassword"></label>
    <input asp-for="ConfirmPassword"type="password"><br>
    <button type="submit">Create new User</button>
</form>




